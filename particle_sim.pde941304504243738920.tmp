//initialize particle system
ParticleSystem ps;

//makes font settings
PFont myFont;
int fontSize = 48;

void setup() {
  size(1000, 1000, P2D);
  background(0);
  //loads font
  myFont = loadFont("ArialMT-48.vlw");
  textFont(myFont, fontSize);
  //constructs a particle system ps
  ps = new ParticleSystem();
}

void draw() {
  //displays background
  fill(0);
  noStroke();
  rect(0,0,width,height);
  //displays fps count
  fill(255);
  text(round(frameRate) + " fps",10,fontSize);
  //applies forces
  ps.applyForce(gravity);
  if (mousePressed) {
    ps.applyForce(wind);
  }
  //adds particles to particle system
  ps.addParticle();
  //runs particle system
  ps.psrun();
}